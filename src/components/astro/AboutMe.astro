---
import "../../styles/AboutMe.css";
import GridGen from "../../components/react/GridGen.jsx";
---

<section
  id="hero"
  class="relative w-screen h-screen flex justify-center items-center overflow-hidden"
>
  <!-- Background -->
  <div
    class="absolute inset-0 z-[-10] pointer-events-auto"
  >
    <div class="absolute inset-0 background"></div>

    <div
      class="absolute inset-0 grid grid-cols-10 opacity-40"
    >
      <GridGen client:load />
    </div>
  </div>

  <!-- Hero Content -->
  <div
    id="hero-content"
    class="relative flex flex-col items-center text-center px-6"
  >
    <h1
      class="bebas-neue-regular text-[4rem] md:text-[7rem] tracking-widest uppercase
             text-cyan-300 drop-shadow-[0_0_20px_#22d3ee]"
      data-cursor-style="line-text"
    >
      Daffa
    </h1>

    <p
      class="mt-4 text-lg md:text-xl text-gray-300 tracking-wide opacity-80"
      data-cursor-style="line-text"
    >
      Creative Web Developer â€¢ Interactive Experiences
    </p>

    <div class="mt-10 flex gap-6">
      <a
        href="#about"
        class="px-8 py-3 border border-white/30 hover:border-cyan-300 transition uppercase tracking-wider"
      >
        Enter
      </a>

      <a
        href="#projects"
        class="px-8 py-3 bg-white text-black hover:bg-opacity-80 transition uppercase tracking-wider"
      >
        Projects
      </a>
    </div>
  </div>

  <!-- Scroll Hint -->
  <div class="absolute bottom-10 text-sm tracking-widest opacity-50">
    Scroll
  </div>
</section>


<!-- animation for the background -->
<script>
  import { animate, stagger, onScroll } from "animejs";

  // Initial state
  animate("#hero-content > *", {
    opacity: [0, 1],
    translateY: [40, 0],
    delay: stagger(200),
    duration: 1200,
    easing: "easeOutExpo",
  });

  // Background motion
  animate(".background", {
    scale: [1.1, 1],
    opacity: [0, 1],
    duration: 2000,
    easing: "easeOutExpo",
  });

  // Grid subtle pulse on scroll
  animate(".bg-cell", {
    opacity: [0, 0.15],
    delay: stagger(40),
    duration: 800,
    easing: "easeOutSine",
    autoplay: onScroll({
      enter: "enter bottom",
    }),
  });
</script>

